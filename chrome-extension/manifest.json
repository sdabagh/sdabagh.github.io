{
  "manifest_version": 3,
  "name": "Canvas Discussion Grading Assistant",
  "version": "1.3.0",
  "description": "AI-powered grading assistant for Canvas discussions using Claude API",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.instructure.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.instructure.com/courses/*/gradebook/speed_grader*",
        "https://*.instructure.com/courses/*/discussion_topics/*"
      ],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}
